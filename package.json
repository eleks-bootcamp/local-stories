{
  "name": "local-stories",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^2.1.4"
  },
  "resolutions": {
    "nth-check": "2.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:eslint": "eslint 'src/**/*.js' --config .eslintrc.js",
    "test:eslint:fix": "npm run test:eslint -- --fix",
    "test:prettier": "prettier --check 'src/**/*.js'",
    "test:prettier:fix": "npm run test:prettier -- --write .",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test:jest"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.js": [
      "npm run test:editorconfig",
      "npm run test:prettier:fix",
      "npm run test:eslint:fix"
    ]
  },
  "description": "## Description",
  "main": ".eslintrc.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eleks-bootcamp/local-stories.git"
  },
  "author": "yarema <yaremaphoto@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eleks-bootcamp/local-stories/issues"
  },
  "homepage": "https://github.com/eleks-bootcamp/local-stories#readme"
}
